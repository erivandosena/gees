{$R *.dfm}

procedure TFrmBoletim.SpeedButton1Click(Sender: TObject);
begin
Close;
end;

procedure TFrmBoletim.SbNovaClick(Sender: TObject);
begin
ObterMatriculas;
try
 FrmInsereAluno:=TFrmInsereAluno.Create(nil);
 FrmInsereAluno.ShowModal;
finally
 FrmInsereAluno.Release;
end;
end;

procedure TFrmBoletim.SbSalvarClick(Sender: TObject);
begin
if IBDS_ExibeNotas.State = dsEdit then
begin
IBDS_ExibeNotas.Edit;
// SALVA ALTERAÇÕES
Screen.Cursor := crHourGlass;
If Not(Dm.IBTransaction.InTransaction) Then
Dm.IBTransaction.StartTransaction;
IBDS_ExibeNotas.Post;
IBDS_ExibeNotas.ApplyUpdates;
Dm.IBTransaction.CommitRetaining;
Screen.Cursor := crDefault;
Seleciona_Notas;
Exit;
end else
IBQueryNumMatricula.Close;
IBQueryNumMatricula.Open;
if DBText8.Caption = '' then
begin
MessageBox(FrmBoletim.Handle,'Informe o nome do(a) aluno(a).','Informação',0+64);
Exit;
end else
if DS_Boletim.State = dsInsert then
begin
if not (IBQueryNumMatricula.Locate('MATRICULA', DBText2.Caption, [])) then
begin
Screen.Cursor := crHourGlass;
If Not(DM.IBTransaction.InTransaction) Then
Dm.IBTransaction.StartTransaction;
Dm.IBDS_BOLETIM.Post;
Dm.IBDS_BOLETIM.ApplyUpdates;
DM.IBTransaction.CommitRetaining;
// EXIBI BOLETIM SELECIONADO
Seleciona_Notas;
Screen.Cursor := crDefault;

//SALVA E INICIA A MONTAGEM DAS DICIPLINAS
{
if SERIE_DISCIPLINA = 'MATERNAL' then
begin
Dm.IBDS_BOLETIM.Locate('SERIE', SERIE_DISCIPLINA, []);
IBQuery_Disciplinas.Close;
IBQuery_Disciplinas.SQL.Clear;
IBQuery_Disciplinas.SQL.Add('select COD_NOTA, COD_BOLE, DISCIPLINA, ANO_LETIVO from NOTAS');
IBQuery_Disciplinas.SQL.Add(' where COD_BOLE = '+#39+Dm.IBDS_BOLETIMCOD_BOLE.AsString+#39+' and ANO_LETIVO =:ALetivo ');
IBQuery_Disciplinas.ParamByName('ALetivo').AsString:= AnoLetivo;
IBQuery_Disciplinas.SQL.Add(' order by COD_NOTA, COD_BOLE');
IBQuery_Disciplinas.Prepare;
IBQuery_Disciplinas.Open;
IBQuery_Disciplinas.First;
Dm.IBDS_BOLETIM.Locate('COD_BOLE', SERIE_CODBOLE, []);
    if not IBQuery_Disciplinas.Eof then
    repeat
 //seus comandos para a tabela
IBDS_ExibeNotas.Append;
   IBDS_ExibeNotasDISCIPLINA.AsString:= IBQuery_DisciplinasDISCIPLINA.AsString;
   Screen.Cursor := crHourGlass;
If Not(Dm.IBTransaction.InTransaction) Then
Dm.IBTransaction.StartTransaction;
IBDS_ExibeNotas.Post;
IBDS_ExibeNotas.ApplyUpdates;
Dm.IBTransaction.CommitRetaining;
Screen.Cursor := crDefault;
   Seleciona_Notas;
   IBQuery_Disciplinas.Next;
   IBDS_ExibeNotas.Next;
   until IBQuery_Disciplinas.Eof;
end else
if SERIE_DISCIPLINA = 'JARDIM I' then
begin
Dm.IBDS_BOLETIM.Locate('SERIE', SERIE_DISCIPLINA, []);
IBQuery_Disciplinas.Close;
IBQuery_Disciplinas.SQL.Clear;
IBQuery_Disciplinas.SQL.Add('select COD_NOTA, COD_BOLE, DISCIPLINA, ANO_LETIVO from NOTAS ');
IBQuery_Disciplinas.SQL.Add('where COD_BOLE = '+#39+Dm.IBDS_BOLETIMCOD_BOLE.AsString+#39+' and ANO_LETIVO =:ALetivo ');
IBQuery_Disciplinas.ParamByName('ALetivo').AsString:= AnoLetivo;
IBQuery_Disciplinas.SQL.Add('order by COD_NOTA, COD_BOLE');
IBQuery_Disciplinas.Prepare;
IBQuery_Disciplinas.Open;
IBQuery_Disciplinas.First;
Dm.IBDS_BOLETIM.Locate('COD_BOLE', SERIE_CODBOLE, []);
    if not IBQuery_Disciplinas.Eof then
    repeat
 //seus comandos para a tabela
IBDS_ExibeNotas.Append;
   IBDS_ExibeNotasDISCIPLINA.AsString:= IBQuery_DisciplinasDISCIPLINA.AsString;
   Screen.Cursor := crHourGlass;
If Not(Dm.IBTransaction.InTransaction) Then
Dm.IBTransaction.StartTransaction;
IBDS_ExibeNotas.Post;
IBDS_ExibeNotas.ApplyUpdates;
Dm.IBTransaction.CommitRetaining;
Screen.Cursor := crDefault;
   Seleciona_Notas;
   IBQuery_Disciplinas.Next;
   IBDS_ExibeNotas.Next;
   until IBQuery_Disciplinas.Eof;
end else
if SERIE_DISCIPLINA = 'JARDIM II' then
begin
Dm.IBDS_BOLETIM.Locate('SERIE', SERIE_DISCIPLINA, []);
IBQuery_Disciplinas.Close;
IBQuery_Disciplinas.SQL.Clear;
IBQuery_Disciplinas.SQL.Add('select COD_NOTA, COD_BOLE, DISCIPLINA, ANO_LETIVO from NOTAS ');
IBQuery_Disciplinas.SQL.Add('where COD_BOLE = '+#39+Dm.IBDS_BOLETIMCOD_BOLE.AsString+#39+' and ANO_LETIVO =:ALetivo ');
IBQuery_Disciplinas.ParamByName('ALetivo').AsString:= AnoLetivo;
IBQuery_Disciplinas.SQL.Add('order by COD_NOTA, COD_BOLE');
IBQuery_Disciplinas.Prepare;
IBQuery_Disciplinas.Open;
IBQuery_Disciplinas.First;
Dm.IBDS_BOLETIM.Locate('COD_BOLE', SERIE_CODBOLE, []);
    if not IBQuery_Disciplinas.Eof then
    repeat
 //seus comandos para a tabela
IBDS_ExibeNotas.Append;
   IBDS_ExibeNotasDISCIPLINA.AsString:= IBQuery_DisciplinasDISCIPLINA.AsString;
   Screen.Cursor := crHourGlass;
If Not(Dm.IBTransaction.InTransaction) Then
Dm.IBTransaction.StartTransaction;
IBDS_ExibeNotas.Post;
IBDS_ExibeNotas.ApplyUpdates;
Dm.IBTransaction.CommitRetaining;
Screen.Cursor := crDefault;
   Seleciona_Notas;
   IBQuery_Disciplinas.Next;
   IBDS_ExibeNotas.Next;
   until IBQuery_Disciplinas.Eof;
end else
if SERIE_DISCIPLINA = 'ALFABETIZAÇÃO' then
begin
Dm.IBDS_BOLETIM.Locate('SERIE', SERIE_DISCIPLINA, []);
IBQuery_Disciplinas.Close;
IBQuery_Disciplinas.SQL.Clear;
IBQuery_Disciplinas.SQL.Add('select COD_NOTA, COD_BOLE, DISCIPLINA, ANO_LETIVO from NOTAS ');
IBQuery_Disciplinas.SQL.Add('where COD_BOLE = '+#39+Dm.IBDS_BOLETIMCOD_BOLE.AsString+#39+' and ANO_LETIVO =:ALetivo ');
